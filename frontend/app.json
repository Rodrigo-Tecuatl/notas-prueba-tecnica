{
  "expo": {
    "name": "Notas",
    "slug": "notas",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir que $(PRODUCT_NAME) acceda a la c치mara para tomar fotos",
        "NSMicrophoneUsageDescription": "Permitir que $(PRODUCT_NAME) acceda a su micr칩fono"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": [
        "android.permission.CAMERA"
      ]
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que $(PRODUCT_NAME) acceda a su c치mara",
          "microphonePermission": "Permitir que $(PRODUCT_NAME) acceda a su micr칩fono",
          "recordAudioAndroid": true
        }
      ]
    ],
    "jsEngine": "hermes"
  }
}
